@using WebUI.Models
@model IEnumerable<Valute>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">AZN MƏZƏNNƏLƏRİ</h4>
            </div>
            <!--end card-header-->
            <div class="card-body">
                <form action="/Valyuta/Index" method="POST" class="row">
                    <div class="mb-3 col-lg">
                        <select name="code" class="form-select btn border" aria-label="Default select example">
                            @foreach (var item in Model)
                            {
                                <option value="@item.Code">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3  col-lg">
                        <input class="form-control" name="startDate" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="mb-3 col-lg">
                        <input class="form-control" name="lostDate" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="mb-3  col-lg-2">
                        <input id="btn" class="btn btn-default btn-success" type="submit" value="Submit">
                    </div>
                </form>

            </div>
            <!--end card-body-->
        </div>
        <!--end card-->
    </div>
    <!--end col-->
</div>
<br>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">İnflyasiya</h4>
            </div>
            <div class="card-body">
                <div id="myChart"></div>
            </div>
        </div>
    </div>
</div>

<br>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header text-center">
                <h4 class="card-title">AZN Məzənnələri</h4>
            </div>
            <!--end card-header-->
            <div class="card-body">
                <div style="display: block; position: relative; height: 300px; overflow: auto;"
                     class="table-responsive-sm  ">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Valyuta</th>
                                <th scope="col">Kod</th>
                                <th scope="col">Kurs</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                if (@ViewBag.Data != null)
                                {
                                    foreach (var item in @ViewBag.Data)
                                    {
                                        <tr class="valyuta">
                                            <td class="">@item.Name</td>
                                            <td class="">@item.Code</td>
                                            <td class="">@item.Value</td>
                                            <td class="">@item.DateTime.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    }
                                }
                            }

                        </tbody>
                    </table>
                    <!--end /table-->
                </div>
                <!--end /tableresponsive-->
            </div>
            <!--end card-body-->
        </div>
        <!--end card-->
    </div>
</div>